<?xml version="1.0" encoding="UTF-8"?>
<!-- https://api-user.netflix.com/oauth/login.* -->
<site site="http://movies\.netflix\.com/WiPlayer.*"
	    plugin="silverlight"
			initialState="init"
      finalState="cleanup"
			windowWidth="1280"
			windowHeight="720"
			manualLock="true"
      agent="Mozilla/5.0 (Macintosh; U; Intel Mac OS X 10_5_6; en-gb) AppleWebKit/528.16 (KHTML, like Gecko) Version/4.0 Safari/528.16"
			identifier="com.plexapp.plugins.netflix"
			version="1.0">

	<crop x="0" y="0" width="0" height="0" />

